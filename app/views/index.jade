extends ./layout.jade

block extra-header
  link(rel='stylesheet', href='/css/index.css')

block content
  .container
    .row
      .col-md-8.col-md-push-2
        .img-container.main-logo
          img(src='/images/logo-lg.svg')

    .row.sub-text
      .col-md-12
        h4
          | Enter your Twitter handle to see which politicians are the most similar (and different) to you!
    form(method='post', action='/')
      .row.twitter-submission
        .col-md-12
          span.h3 @
          input.paragraph.form-control(type='text', value='#{user ? user.screen_name : "" }', name='username', placeholder='your twitter handle...', required)
          button.button.h4(type='submit') Match me!
          .loading
            img(src='/images/loading.gif', alt='loading')

    if error
      .row
        .col-md-12
          div(role='alert').alert
            h3 Error
            p #{error}
    if warning
      .row
        .col-md-12
          div(role='alert').alert
            h3 Warning!
            p #{warning}
    if info
      .row
        .col-md-12
          div(role='alert').alert
            p #{info}
    .row.extra-links
      .col-md-12
        p.text-center
          a(href='https://www.ibm.com/smarterplanet/us/en/ibmwatson/developercloud/') Built with IBM Watson
